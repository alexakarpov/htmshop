[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=storeadmin
Group=htm
WorkingDirectory=/home/storeadmin/htmshop
ExecStart=/home/storeadmin/htmshop/venv/bin/gunicorn \
          --workers 3 \
          --bind unix:/run/gunicorn.sock \
          --env DJANGO_SETTINGS_MODULE=ecommerce.settings.staging \
          --access-logfile /var/log/htmshop/access.log \
          --error-logfile /var/log/htmshop/error.log \
          ecommerce.wsgi:application

[Install]
WantedBy=multi-user.target
